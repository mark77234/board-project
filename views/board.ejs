<style>
  .board-container {
    max-width: 700px;
    margin: 20px auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #f9f9f9;
  }

  .board-title {
    text-align: center;
    color: #333;
  }

  .post-list {
    list-style: none;
    padding: 0;
  }

  .post-item {
    background: #fff;
    border: 1px solid #ccc;
    padding: 10px 15px;
    margin: 10px 0;
    border-radius: 6px;
  }

  .reply {
    margin-left: 30px;
    background-color: #f1f1f1;
  }

  .post-item a {
    text-decoration: none;
    color: #007bff;
  }

  .post-item a:hover {
    text-decoration: underline;
  }

  .write-button {
    font-weight: bold;
    text-decoration: none;
    color: #2e7d32;
  }

  .write-button:hover {
    text-decoration: underline;
  }
</style>
<div class="board-container">
  <header style="text-align: center; margin-bottom: 20px">
    <a
      href="/"
      style="
        text-decoration: none;
        color: #d32f2f;
        font-size: 2.5rem;
        font-weight: 700;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      "
    >
      테무찬
    </a>
  </header>
  <h2 class="board-title">고객센터 게시판</h2>
  <div style="text-align: right; margin-bottom: 10px">
    <a href="/board/new" class="write-button">[글쓰기]</a>
  </div>
  <ul class="post-list">
    <% posts.forEach(post => { %>
    <li class="post-item <%= post.parent_id ? 'reply' : '' %>">
      <div>
        <a href="/board/view/<%= post.id %>">
          <strong
            ><%= post.parent_id ? '[답글]' : '' %> <%= post.title %></strong
          >
        </a>
        <span style="color: #888; margin-left: 8px">- <%= post.author %></span>
      </div>
      <div style="margin-top: 5px; font-size: 0.9rem">
        <a href="/board/edit/<%= post.id %>" style="margin-right: 8px">수정</a>
        <a href="/board/delete/<%= post.id %>">삭제</a>
      </div>
    </li>
    <% }) %>
  </ul>
</div>
